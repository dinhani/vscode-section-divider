{
    "env": {
        "node": true,
        "es2020": true,
        "mocha": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-console": "warn",
        "no-trailing-whitespace": "off",
        "no-unused-vars": "warn",
        "prefer-const": "warn",
        "no-var": "warn",
        "semi": "off",
        "quotes": "off",
        "indent": "off",
        "eqeqeq": "off",
        "brace-style": "off",
        "curly": "off"
    },
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {}
        }
    ]
}
